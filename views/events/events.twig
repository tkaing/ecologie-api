{% extends 'layout.twig' %}

{% block stylesheet %}
    <link rel='stylesheet' href='/stylesheets/style.css' />
{% endblock %}

{% block body %}

    <h1>ecologie-api</h1>

    <div class="row">
    	<div class="col"></div>

		<div class="col-8">
			<table class="table">
				<tr>
					<th>Identifier</th>
					<th>Nom</th>
					<th>Capacité</th>
					<th>Date limite</th>
					<th>Débute le ...</th>
					<th>Finit le ...</th>
					<th>Tags</th>
				</tr>

			    {% for event in events %}
			    	<tr>
						<td>{{ event._id }}</td>
						<td>{{ event.name }}</td>
						<td>{{ event.capacity }}</td>
						<td>{{ ((event.deadline)/1000)|date('d/m/Y') }}</td>
						<td>{{ ((event.startOn)/1000)|date('d/m/Y') }}</td>
						<td>{{ ((event.endOn)/1000)|date('d/m/Y') }}</td>
						<td>
							{% for category in event.categories %}
								#{{ category ~ " " }}
							{% endfor %}
						</td>
					</tr>
			    {% endfor %}
		    </table>
		</div>

    	<div class="col"></div>
    </div>

{% endblock %}